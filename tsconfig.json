{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/atoms": [
        "components/atoms/index"
      ],
      "@/molecules": [
        "components/molecules/index"
      ],
      "@/organisms": [
        "components/organisms/index"
      ],
      "@/templates": [
        "components/templates/index"
      ],
      "@/pages": [
        "components/pages/index"
      ],
      "@/libs": [
        "libs/index"
      ],
      "@/styles": [
        "styles/index"
      ],
      "@/hooks": [
        "hooks/index"
      ],
      "@/types": [
        "types/index"
      ],
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
